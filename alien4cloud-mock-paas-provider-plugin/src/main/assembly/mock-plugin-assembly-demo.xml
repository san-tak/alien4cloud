<assembly>
    <id>assemble-plugin</id>
    <formats>
        <format>zip</format>
    </formats>
    <includeBaseDirectory>false</includeBaseDirectory>
    <fileSets>
        <fileSet>
            <directory>target/classes</directory>
            <lineEnding>keep</lineEnding>
            <outputDirectory>/</outputDirectory>
            <includes>
                <include>**/**</include>
            </includes>
            <excludes>
                <exclude>alien4cloud/plugin/mock/MockOrchestratorFactory.class</exclude>
                <exclude>META-INF/**</exclude>
                <exclude>aws/mock-resources/mock-resources.yaml</exclude>
                <exclude>openstack/mock-resources/mock-resources.yaml</exclude>
                <exclude>openstack/mock-openstack-resources/openstack-resources.yaml</exclude>
            </excludes>
        </fileSet>
        <fileSet>
            <directory>${project.build.testOutputDirectory}</directory>
            <lineEnding>keep</lineEnding>
            <outputDirectory>/</outputDirectory>
            <includes>
                <include>alien4cloud/plugin/mock/MockOrchestratorFactory.class</include>
            </includes>
        </fileSet>
    </fileSets>
    <files>
        <file>
            <source>${basedir}/src/main/resources/META-INF/plugin.yml</source>
            <destName>plugin.yml</destName>
            <filtered>true</filtered>
            <outputDirectory>META-INF</outputDirectory>
        </file>
        <file>
            <source>${basedir}/src/main/resources/aws/mock-resources/mock-resources.yaml</source>
            <filtered>true</filtered>
            <outputDirectory>aws/mock-resources</outputDirectory>
            <destName>mock-resources.yaml</destName>
        </file>
        <file>
            <source>${basedir}/src/main/resources/openstack/mock-resources/mock-resources.yaml</source>
            <filtered>true</filtered>
            <outputDirectory>openstack/mock-resources</outputDirectory>
            <destName>mock-resources.yaml</destName>
        </file>
        <file>
            <source>${basedir}/src/main/resources/openstack/mock-openstack-resources/openstack-resources.yaml</source>
            <filtered>true</filtered>
            <outputDirectory>openstack/mock-openstack-resources</outputDirectory>
            <destName>openstack-resources.yaml</destName>
        </file>
    </files>
    <dependencySets>
        <dependencySet>
            <useProjectArtifact>false</useProjectArtifact>
            <useTransitiveDependencies>true</useTransitiveDependencies>
            <outputDirectory>lib</outputDirectory>
        </dependencySet>
    </dependencySets>
</assembly>